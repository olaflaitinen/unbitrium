# EditorConfig - Consistent coding styles across editors
# See: https://editorconfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 88

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# YAML and JSON files
[*.{yml,yaml,json}]
indent_size = 2

# Markdown files
[*.md]
indent_size = 2
trim_trailing_whitespace = false
max_line_length = 80

# reStructuredText
[*.rst]
indent_size = 3
max_line_length = 79

# TOML files
[*.toml]
indent_size = 4

# Shell scripts
[*.sh]
indent_size = 2

# Makefile (requires tabs)
[Makefile]
indent_style = tab

# GitHub Actions
[.github/**/*.yml]
indent_size = 2

# Docker files
[Dockerfile*]
indent_size = 4

# Git config files
[.git*]
indent_size = 4

# INI config files
[*.ini]
indent_size = 4

# Batch files (Windows)
[*.{bat,cmd}]
end_of_line = crlf

# PowerShell
[*.ps1]
end_of_line = crlf
indent_size = 4
